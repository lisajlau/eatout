{
  "compilerOptions": {
    "target": "es2015",
    "module": "es6",
    "moduleResolution": "node",
    "pretty": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "sourceMap": true,
    "strict": true,
    "jsx": "react",
    "allowJs": true,
    "esModuleInterop": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
